<h4>Your friend requests:</h4>

<ul>
<% @requests.each do |requester| %>
  <li>
    <%= image_tag requester.gravatar_url, :class => "gravatar" %>
    <b><%= link_to  requester.first_name, requester %> </b>
     <%= button_to "Accept Request", { :controller => :friendships, :action => 'update',
                                          :params => { :requester => User.find(requester.id) },
                                          :method => :patch } %>
    <%= button_to 'Decline Request', { :controller => :friendships, :action => 'update',
                                          :id => find_friendship(user, current_user) }, 
                                          :method => :patch,
                                          :class => 'btn btn-primary mt-1' %>                                      

  </li>
<% end %>
</ul>